<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head.ejs") %>
    <link href="/css/home.css" rel="stylesheet" />
    <link href="/css/recipeCard.css" rel="stylesheet" />
  </head>
  <body>
    <header><%- include("partials/navbar.ejs") %></header>
    <main class="home_main">
      <div style="display: none" userId="<%=userId%>"></div>
      <p class="greeting"><%=greeting%>,<br /><span><%=username%> ðŸ‘‹</span></p>
      <section class="meal_section">
        <div class="subtitle_box">
          <p class="subtitle">Meal Log</p>
          <a href="/meallog" class="view_more">View more</a>
        </div>
        <div class="meal_box">
          <div class="date_box">
            <p class="month"></p>
            <p class="day"></p>
          </div>
          <div class="cal_box">
            <% if (isLoggedIn) { %>
            <div class="cal_item">
              <p class="mealType">Breakfast</p>
              <p class="cal"><%=totalCalories.breakfast%></p>
              <p class="kcal">kcal</p>
            </div>
            <div class="cal_item">
              <p class="mealType">Lunch</p>
              <p class="cal"><%=totalCalories.lunch%></p>
              <p class="kcal">kcal</p>
            </div>
            <div class="cal_item">
              <p class="mealType">Dinner</p>
              <p class="cal"><%=totalCalories.dinner%></p>
              <p class="kcal">kcal</p>
            </div>
            <% } else { %>
            <div class="login_notification">
              <p>Want to track your meals?</p>
              <button
                class="big_btn green_btn"
                onclick="window.location.href = '/login'"
              >
                Log in
              </button>
            </div>
            <% } %>
          </div>
        </div>
      </section>
      <% if (isLoggedIn) { %>
      <section class="recipe_section">
        <div class="subtitle_box">
          <p class="subtitle">Recommended Recipe</p>
          <a href="/recipe" class="view_more">View more</a>
        </div>

        <div class="recipes_container" id="recipes_container"></div>
      </section>
      <% } %>
    </main>
    <script src="js/recipeCard.js"></script>
    <script src="js/home.js"></script>
  </body>
</html>
